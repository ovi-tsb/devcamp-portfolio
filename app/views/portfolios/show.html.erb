<div class="container portfolio-container">
	<div class="row">
		<div class="col">
			<%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main')%>
		</div>
		<div class="col">
			<h3><%= @portfolio_item.title %></h3>
			<hr>
			<h6><%= @portfolio_item.subtitle %></h6>
			<p><%= @portfolio_item.body %></p>
			<hr>
			<h5>Technologies used</h5>
			<% @portfolio_item.technologies.each do |t| %>
				<p><%= t.name %></p>
			<% end %>

			<% if logged_in?(:site_admin) %>
				<div class="col-md-12">
					<%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
				</div>
			<% end %>
		</div>
	</div>
</div>



