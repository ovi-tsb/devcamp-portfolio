<hr>
<h3><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></h3>
<hr>
<h6><%= portfolio_item.subtitle %></h6>
<p><%= portfolio_item.body %></p>
<%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
<br>
<%= link_to "Edit", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %>
<%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<hr style="border-top: dotted 1px;" />